	"item": [
		{
			"name": "Customer APIs",
			"item": [
				{
					"name": "Get All Customers with Filter",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/customers?shop_name=Semua Toko",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"customers"
							],
							"query": [
								{
									"key": "shop_name",
									"value": "Semua Toko"
								}
							]
						},
						"description": "Mendapatkan list customer dengan filter nama toko"
					},
					"response": []
				},
				{
					"name": "Get Customer Filter Options",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/customer-filter-options",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"customer-filter-options"
							]
						},
						"description": "Mendapatkan opsi filter untuk dropdown nama toko"
					},
					"response": []
				}
			]
		},
		{
			"name": "Gift APIs",
			"item": [
				{
					"name": "Get Gift Summary",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/gift-summary",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"gift-summary"
							]
						},
						"description": "Mendapatkan rekapan total hadiah (tidak terpengaruh filter toko)"
					},
					"response": []
				},
				{
					"name": "Confirm Gift (Terima/Tolak)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cust_id\": \"CUST001\",\n  \"action\": \"terima\",\n  \"failed_reason\": \"\",\n  \"tth_numbers\": [\"TTOL-00A-2306-90081\", \"TTOL-00A-2306-90082\"]\n}"
						},
